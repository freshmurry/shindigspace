<div class="row">
  <div class="col-md-8 banner">
    <h1><span class="text-blue">Book and rent pool time in your neighborhood</span> simple and easy.</h1>
  </div>

  <div class="col-md-12"><h4>Search for a pool in your neighborhood</h4></div>
</div>


  <div class="row">
    <div class="col-md-6">
      <%= form_tag search_path, method: :get do %>

      <%= text_field_tag :search, params[:search], placeholder: "Search Pools", class: "form-control", id: "autolocation" %>
    </div>&nbsp;

    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-form btn-block" %>
    </div>
  </div>

<% end %>


<header class="page-header bg-img-cover overlay overlay-primary overlay-0 page-header-dark" style="background-image: url('assets/hall.png');">
  <div class="page-header-content py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-9 banner">
          <h1 class="text-red">Awesome Event Space Rentals</h1>
          <p class="page-header-text mb-4">Book and rent a unique event space.</p>
          <div class="form-row justify-content-center">
            <div class="">
              <div class="">
                <%= form_tag search_path, method: :get do %>
                <div class="col-md-9">
                  <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control", id: "autolocation" %>
                </div>  
                <!-- <div class="col-md-3">-->
                <!--  <= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datepicker" %>-->
                <!--</div>-->
              </div>
            </div>
            
            <div class="col-lg-3 col-md-4">
              <%= submit_tag "Search", class: "btn btn-form btn-block" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<br>

<!-- VENUES -->
<section class="">
  <div class="">
    <div class="banner text-center">
    	<h2>Event Spaces Near You</h2>
      <h3>Book and rent an event space</h3>
    </div>
    <br/>
      
    <div class="">
      <%= render partial: "venues/venues_list", locals: {venues: @venues} %>
    </div>
  </div>
</section>
  
<!-- HOW SHINDIGSPACE WORKS -->
<section class="" style="background-color: #F5F6fA;">
  <div class="">
    <div class="page-section">
    <div class="banner text-center">
     	<h2 class="text-blue">How ShindigSpace Works</h2>
      <h3>Contact-less Awesomeness</h3>
    </div>
        
    <div class="continer text-center">
      <div class="col-md-4">
      <div class="fas fa-building fa-4x text-blue"></div>
        <h3 class="my-3">Find a Unique Space</h3>
        <p class="text-center">Search for an event space, wait until your host vendor confirm your date, and await your approval. Listings with the <i class="fa fa-bolt" style="color: #ffb400"></i> icon will be booked instantly.</p>
      </div>
                        
      <div class="col-md-4">
      <div class="fas fa-envelope fa-4x text-blue"></div>

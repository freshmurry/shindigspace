<% if @photos.count > 0 %>
  <br/><br/>

  <div class="row">
    <% @photos.each do |photo| %>
      <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag photo.image.url() %>
          </div>
          <div class="panel-body">
            <div class="container">  
              <span class="pull-right">
                <%= link_to venue_photo_path(photo.venue_id, photo), remote: true, method: :delete, data: {confirm: "Are you sure?"} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
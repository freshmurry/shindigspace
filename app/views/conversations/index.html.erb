<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">Your Conversations</div>
          <div class="panel-body">
            <% if @conversations.empty? %>
              <!-- Display when there are no conversations -->
              <div class="container text-center">
                <h3>No Messages</h3>
              </div>
            <% else %>
              <div class="container">
                <% @conversations.each do |conversation| %>
                  <% other = current_user == conversation.sender ? conversation.recipient : conversation.sender %>
                  <%= link_to conversation_messages_path(conversation) do %>
                    <div class="container">
                      <div class="row conversation">
                        <% if conversation.messages.any? %>
                          <div class="col-md-4">
                            <%= image_tag other.image, class: "img-circle avatar-small" %>
                            <b><%= other.fullname %></b>
                            <%= conversation.messages.last.message_time %>
                          </div>
                          
                          <div class="col-md-8">
                            <%= conversation.messages.last.context %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

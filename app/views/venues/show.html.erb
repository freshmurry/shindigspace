<section class="">
  <div class="container">
    <!-- Image -->
    <div class="row">
      <div class="col-md-12">
        <% if @photos.length > 0 %>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
          
            <!--Wrapper for slides -->
            <div class="carousel-inner">
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url(), width: "100%" %>
                </div>
              <% end %>
            </div>
          
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    <br/>
    
    <div class="row">
      
    <!-- LEFT PANEL -->
    <div class="col-md-8">
      <!-- Listing Name -->
      <div class="container">
        <div class="row">
          <div class="col-md-9">
          <h2><%= @venue.listing_name %></h2>
              <%= @venue.address %>
          </div>&nbsp;
      
          <div class="col-md-3 text-center">
            <%= image_tag @venue.user.image, class: "img-circle avatar-large" %><br/>
            <%= link_to user_path(@venue.user) do %>
            <%= @venue.user.fullname %>
            <% end %>
            <div>
              <span id="average_rating"></span>
            </div>
            <div class="center">
              <% if current_user && current_user != @venue.user %>
                <%= link_to "Message Host", conversations_path(sender_id: current_user.id, recipient_id: @venue.user.id), method: :post, class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>  
      <hr/>
          
      <!-- Venue Info -->
      <div class="container">
        <div class="row text-center">
          <div class="col-xs-4 col-sm-4 col-md-4">
            <i class="fa fa-users fa-2x"></i>
          </div>
          <div class="col-xs-4 col-sm-4 col-md-4">
            <i class="fa fa-toilet fa-2x"></i>
          </div>
          <div class="col-xs-4 col-sm-4 col-md-4">
            <i class="fa fa-car fa-2x"></i>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-xs-4 col-sm-4 col-md-4"><%= @venue.accommodate %></div>
          <div class="col-xs-4 col-sm-4 col-md-4"><%= @venue.bathrooms %></div>
          <div class="col-xs-4 col-sm-4 col-md-4"><%= @venue.parking %></div>
        </div>
      </div>  
      <hr/>
      
      <!-- About -->
      <div class="">
        <div class="">
          <div class="panel-default">
            <div class="h3">About This Listing</div>
            <div class="panel-body">
              <div class="container">
                <p><%= @venue.description %></p>
              </div>  
            </div>
          </div>
        </div>
      </div>  
      <hr/>
      
      <!-- AMENITIES --> 
      <div class="">
        <div class="">
          <div class="panel-default">
            <div class="h3">What this place offers</div>
            <div class="panel-body">
              <div class="container">
                <div class="col-md-12">
                  <div class="row">
                    <div class="col-xs-3 col-sm-3 col-md-3">
                      <ul class="amenities">
                        <li class="<%= 'text-line-through' if !@venue.is_tables %>">Tables</li>
                        <li class="<%= 'text-line-through' if !@venue.is_chairs %>">Chairs</li>
                      </ul>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3">
                      <ul class="amenities">
                        <li class="<%= 'text-line-through' if !@venue.is_wifi %>">Wifi</li>
                        <li class="<%= 'text-line-through' if !@venue.is_projector %>">Projector</li>
                      </ul>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3">
                      <ul class="amenities">
                        <li class="<%= 'text-line-through' if !@venue.is_speakers %>">Speakers</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr/>
      
      <!-- CAROUSEL -->
      
      <!-- REVIEWS -->
      <div class="">
        <div class="">
          <div class="panel">
            <div class="h3">Guest Reviews (<%= @guest_reviews.count %>) <span id="average_rating"></span></div>
            <div class="container">
              <div class="panel-body">
                <div><%= render "reviews/guest_list" %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
          
      <!-- GOOGLE MAP -->
      <div class="">
        <div class="">
          <div id="map" style="width: 100%; height: 400px"></div>
          <!-- <script src="https://maps.googleapis.com/maps/api/js"></script> -->
          <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwN_tpAAKnHhy14HzNqK-XeuarVJhNHg8"></script>
          <script>
            function initialize() {
              var location = {lat: <%= @venue.latitude %>, lng: <%= @venue.longitude %>};
              var map = new google.maps.Map(document.getElementById('map'), {
                center: location,
                zoom: 12
              });
              
              var marker = new google.maps.Marker({
                position: location,
                map: map
              });
              
              var infoWindow = new google.maps.InfoWindow({
                content: '<div id="content"><%= image_tag @venue.cover_photo(:medium) %></div>'
              });
             
              infoWindow.open(map, marker);
            }
              
            google.maps.event.addDomListener(window, 'load', initialize);
          </script>
        </div>
      </div>  
      <hr/>
    
      <!-- NEARBY EVENT ITEMS -->
      <!--<div class="">-->
        <div class="h3">Nearby Event Spaces</div>
          <% for venue in @venue.nearbys(10) %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag venue.cover_photo(:medium) %>
            </div>
                  
            <div class="panel-body">
              <div class="container">
                <%= link_to venue.listing_name, venue %><br/>
                (<%= venue.distance.round(2) %> miles away)
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <!--</div>-->
    </div>
    
    <!-- RIGHT PANEL -->
    <div class="col-md-4">
      <!-- RESERVATION FORM -->
      <%= render 'reservations/form' %>
    </div>
  </div>
</section>
  
<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @venue.average_rating %>
  });
</script>
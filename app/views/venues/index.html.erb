<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><%= link_to "Current Listings", venues_path, class: "sidebar-link active" %></li>
          <li class="sidebar-item"><%= link_to "Current Reservations", current_reservations_path, class: "sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Previous Reservations", previous_reservations_path, class: "sidebar-link" %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            Listings
          </div>
          
          <div class="panel-body">
            <div class="container text-center">
              <% if @venues.empty? %>
                <!-- Display when there are no venues -->
                <h3>No Current Listings</h3>
                <%= link_to "List Event Space", new_venue_path, class: "btn btn-normal" %>
              <% else %>
                <% @venues.each do |venue| %>
                  <div class="container-fluid">
                    <div class="row">
                      <div class="container-fluid">
                        <div class="col-md-2">
                          <%= image_tag venue.cover_photo(:thumb) %>
                        </div>
                        <div class="col-md-6">
                          <h5><%= venue.listing_name %></h5>
                        </div>
                        <div class="col-md-2">
                          <%= link_to "Update", listing_venue_path(venue), class: "btn btn-form" %>
                        </div>
                        <div class="col-md-2">
                          <%= link_to venue, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            <span class="btn btn-danger">Delete</span>
                          <% end %>  
                        </div>
                      </div>  
                    </div>  
                  </div>
                  <hr/>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
